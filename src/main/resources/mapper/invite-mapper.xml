<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nineone.nocm.mapper.invite">
    <insert id="saveInvite" useGeneratedKeys="true" keyProperty="id">
        insert invite (channel_id, sender, recipient)
            values (#{channel_id},#{sender},#{recipient})
    </insert>
    <select id="receiveInvites" resultType="com.nineone.nocm.domain.Invite">
        select * from invite where recipient = #{recipient} and invite_state = 'STAND_BY'
    </select><!-- 추후에 STAND_BY만 가져올 수 있도록 변경?   -->
    <update id="updateInvite">
        update invite set invite_state = #{invite_state} where id = #{id}
    </update>
</mapper>